{
    "name": "czim/laravel-paperclip",
    "description": "Laravel Eloquent file attachment solution",
    "keywords": [ "file", "attachment", "laravel", "upload" ],
    "homepage": "https://github.com/czim",
    "require": {
        "php": "^8.0",
        "czim/file-handling": "^2.0",
        "ext-json": "*"
    },
    "require-dev": {
        "mockery/mockery": "^1.0",
        "phpunit/phpunit": "^9.5",
        "orchestra/testbench": "^6.0",
        "coraxster/flysystem-aws-s3-v3-minio": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Czim\\Paperclip\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Czim\\Paperclip\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Czim\\Paperclip\\Providers\\PaperclipServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
